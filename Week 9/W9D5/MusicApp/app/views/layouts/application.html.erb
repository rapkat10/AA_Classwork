<!DOCTYPE html>
<html>
  <head>
    <title>MusicApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <h1 class="header">Music App</h1>
      
      <% if logged_in? %>
        Current User is: <%= current_user.email %>  

        <form class="sign-out" action="<%= session_url %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <input type="hidden" 
              name="authenticity_token" 
                  value="form_authenticity_token">
          <input type="submit" value="Sign Out">
        </form>

      <% else %>
        <a class="Sign-up-link" href="<%= new_user_url %>">Sign Up</a>
        <a class="Sign-in-link" href="<%= new_session_url %>">Sign In</a>
      <% end %>
      
      <%= flash[:errors] %>

    <%= yield %>
  </body>
</html>
