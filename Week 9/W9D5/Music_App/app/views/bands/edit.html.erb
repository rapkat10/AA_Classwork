<h1>Edit Band: <%= @band.name %></h1>

<form class='form' action="<%= band_url(@band) %>" method="POST">
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden"
        name="authenticity_token"
            value="<%= form_authenticity_token %>">

    <label>Name
        <input type="text" name="band[name]" value="<%= @band.name %>">
    </label>

  <input type="submit" value="Update Band">
</form>