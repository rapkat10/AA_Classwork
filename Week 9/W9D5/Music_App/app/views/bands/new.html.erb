<h1>Create a new Band</h1>

<form class='form' action="<%= bands_url %>" method="POST">
    <input type="hidden"
        name="authenticity_token"
            value="<%= form_authenticity_token %>">

    <label>Name
        <input type="text" name="band[name]" value="<%= @band.name %>">
    </label>

  <input type="submit" value="Create Band">
</form>