<h1>Edit Track: <%= @track.title %></h1>

<form class='form' action="<%= track_url(@track) %>" method="POST" %>
    <input type="hidden" name="_method" value="PUT">
    <input type="hidden"
            name="authenticity_token"
                value="<%= form_authenticity_token %>">

    </label>Name
        <input type="text" name="track[title]" value="<%= @track.title %>">
    </label>

    <label >Album
        <select  name="track[album_id]">
            <% Album.all.each do |album| %>
                <option
                    <%= "selected" if track.album_id == album.id %>
                    value="<%= album.id %>">
                    <%= album.title %>
                </option>
            <% end %>
        </select>
    </label>

    <label>Ord
        <input type="number" name="track[ord]" value="<%= @track.ord %>">
    </label>

    <label >Lyrics
        <textarea name="track[lyrics]"><%= @track.lyrics %></textarea>
    </label>

  <input type="submit" value="Update Track">
</form>